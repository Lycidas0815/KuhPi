<!doctype html>
<html>
  <head>
    <title>Raspberry Pi Weather Station</title>

    <!-- Vendor assets -->
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/moment.min.js"></script>

    <!-- App Assets -->
    <script src="/js/home.js"></script>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img src="/images/raspberry-pi-logo.svg" alt="Raspberry Pi logo" width=20>
          </a>
        </div>
      </div>
    </nav>
    <div class="container text-center">
      <h1>Raspberry Pi Weather Station</h1>
      <img src="/images/raspberry-pi-logo.svg" alt="Raspberry Pi logo" width=50>
      <div class="data">
        <h4>Sensors:</h4>
        <p><%=JSON.stringify(sensorData)%></p>
      </div>
      <div class="data">
        <h4>Platform uptime:</h4>
        <p><script>document.write(JSON.stringify(moment.duration(<%=platformUptime%>, 'seconds')._data));</script></p>
      </div>
      <div class="data">
        <h4>Process uptime:</h4>
        <p><script>document.write(JSON.stringify(moment.duration(<%=processUptime%>, 'seconds')._data));</script></p>
      </div>
      <div id="led-btns">
        <button id="ledOn" class="btn btn-success">LED On</button>
        <button id="ledOff" class="btn btn-danger">LED Off</button>
      </div>
    </div>
  </body>
</html>
